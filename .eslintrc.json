{
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true,
		"commonjs": true
	},
	"globals": {
		"showPopup": true,
		"hidePopup": true
	},
	"extends": "eslint:recommended",
	"installedESLint": true,
	"parserOptions": {
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/jsx-uses-vars": [ "error" ],
		"react/jsx-uses-react": [ "error" ],
		"indent": [ "error", "tab", { "SwitchCase": 1 } ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"no-console": [ "off" ]
	}
}